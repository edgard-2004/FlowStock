@model FlowStock.ViewModels.LoginViewModel;
@{
    Layout = null; 
}
<html>
    <head>
        <title>Registrate</title>
        <div class="row mt-5 justify-content-center">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
        <body>
            <div class="row mt-5 justify-content-center">
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header text-center">
                            Iniciar Sesion
                        </div>
                        <div class="card-body">
                            <form asp-controller="Acceso" asp-action="Login" method="post">
                                <input asp-for="CorreoElectronico" class="form-control mb-3" type="text" placeholder="Correo Electronico" required>
                                <input asp-for="Clave" class="form-control mb-3" type="password" placeholder="Contraseña" required>
                                <div class="d-grid gap-2 mb-3">
                                    <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                                </div>

                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="alert alert-danger"role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                }
                                ¿No tienes una cuenta?<a asp-controller="Acceso" asp-action="Registrate"> Registrate Ya!</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>