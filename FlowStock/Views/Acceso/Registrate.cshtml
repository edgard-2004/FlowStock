@model FlowStock.ViewModels.UsuarioViewModel;
@{
    Layout = null; 
}
<html>
    <head>
        <title>Registrate</title>
        <div class="row mt-5 justify-content-center">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
        <body>
            <div class="row mt-5 justify-content-center">
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header text-center">
                        Registrate
                        </div>
                        <div class="card-body">
                            <form asp-controller="Acceso" asp-action="Registrate" method="post">
                            <input asp-for="NombreUsuario" class="form-control mb-3" type="text" placeholder="Nombre de Usuario" required>
                            <input asp-for="CorreoElectronico" class="form-control mb-3" type="text" placeholder="Correo Electronico" required>
                            <input asp-for="Clave" class="form-control mb-3" type="password" placeholder="Contraseña" required>
                            <input asp-for="ConfirmarClave" class="form-control mb-3" type="password" placeholder="Confirmar Contraseña" required>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrate</button>
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger"role="alert">
                                @ViewData["Mensaje"]
                                </div>
                            }
                            ¿Ya tienes una cuenta?<a asp-controller="Acceso" asp-action="Login"> Iniciar Sesion</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>