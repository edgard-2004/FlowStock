@model FlowStock.Models.Producto;

@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <h2 class="text-center mb-4">🆕 Nuevo Producto</h2>

        <form asp-controller="Producto" asp-action="Nuevo" method="post">
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" placeholder="Ej: Mouse inalámbrico" required>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Marca" class="form-label">Marca</label>
                <input class="form-control" asp-for="Marca" type="text" placeholder="Ej: Logitech" required>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea class="form-control" asp-for="Descripcion" rows="3" placeholder="Breve descripción del producto" required></textarea>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Imagen del Producto</label>
                <input type="text" class="form-control mb-2" asp-for="Imagen" placeholder="pega aquí una URL de imagen" required>
                <img id="imagenPreview" alt="Vista previa" class="img-thumbnail mt-2 d-none" style="max-height: 200px;" />
            </div>    

            <div class="form-group mb-3">
                <label asp-for="CostoUnitario" class="form-label">Costo Unitario ($)</label>
                <input class="form-control" asp-for="CostoUnitario" type="number" step="0.01" min="0" required>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label">Precio de Venta ($)</label>
                <input class="form-control" asp-for="Precio" type="number" step="0.01" min="0" required>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StockActual" class="form-label">Stock Disponible</label>
                <input class="form-control" asp-for="StockActual" type="number" step="1" min="0" required>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Categoria" class="form-label">Categoría</label>
                <input class="form-control" asp-for="Categoria" type="text" placeholder="Ej: Electrónica" required>
            </div>
            
            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary" asp-controller="Producto" asp-action="Registro">🔙 Volver</a>
                <button class="btn btn-primary" type="submit">💾 Guardar Producto</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const urlInput = document.getElementById("imagenInput");
        const preview = document.getElementById("imagenPreview");

        urlInput.addEventListener("input", function () {
            const url = urlInput.value;
            if (url.startsWith("http")) {
                preview.src = url;
                preview.onload = () => preview.classList.remove("d-none");
                preview.onerror = () => preview.classList.add("d-none");
            } else {
                preview.classList.add("d-none");
            }
        });
    });
</script>