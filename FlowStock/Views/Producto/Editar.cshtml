@model FlowStock.Models.Producto;

@{
    ViewData["Title"] = "Editar Producto";
}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <h2 class="text-center mb-4">‚úèÔ∏è Editar Producto</h2>

        <form asp-controller="Producto" asp-action="Editar" method="post">
            <input asp-for="Id" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Marca" class="form-label">Marca</label>
                <input class="form-control" asp-for="Marca" type="text" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label">Descripci√≥n</label>
                <textarea class="form-control" asp-for="Descripcion" rows="3" required></textarea>
            </div>

            
            <div class="form-group mb-3">
                <label class="form-label">Imagen del Producto</label>                
                <input type="text" class="form-control mb-2" asp-for="Imagen" placeholder=" pega aqu√≠ una URL de imagen" required>
                <img id="imagenPreview" alt="Vista previa" class="img-thumbnail mt-2 d-none" style="max-height: 200px;" />
            </div>    

            <div class="form-group mb-3">
                <label asp-for="CostoUnitario" class="form-label">Costo Unitario</label>
                <input class="form-control" asp-for="CostoUnitario" type="number" step="0.01" min="0" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label">Precio</label>
                <input class="form-control" asp-for="Precio" type="number" step="0.01" min="0" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="StockActual" class="form-label">Stock</label>
                <input class="form-control" asp-for="StockActual" type="number" step="1" min="0" required />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Categoria" class="form-label">Categor√≠a</label>
                <input class="form-control" asp-for="Categoria" type="text" required />
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary" asp-controller="Producto" asp-action="Registro">üîô Volver</a>
                <button class="btn btn-success" type="submit">üíæ Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const urlInput = document.querySelector('input[asp-for="Imagen"]');
        const preview = document.getElementById('imagenPreview');

        urlInput.addEventListener("input", function () {
            const url = urlInput.value;
            if (url.startsWith('http')) {
                preview.src = url;
                preview.classList.remove("d-none");
            } else {
                preview.classList.add("d-none");
            }
        });
    });
</script>
